{
  "title": {
    "type": "string",
    "default": "My App"
  },
  "defaultLanguage": {
    "regexp": "/^([a-z]{2})$/",
    "default": "en"
  },
  "theme": {
    "allow": ["ios", "material", "ios-material", "material-ios"],
    "default": "ios"
  },
  "useIconFonts": {
    "props": {
      "framework7": {
        "type": "boolean",
        "default": false
      },
      "material": {
        "type": "boolean",
        "default": false
      },
      "ion": {
        "type": "boolean",
        "default": false
      },
      "fontawesome": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "iconBackgroundColor": {
    "regexp": "/^#([0-9a-f]{6})$/i",
    "default": "#ffffff"
  },
  "statusbarBackgroundColor": {
    "regexp": "/^#([0-9a-f]{6})$/i",
    "default": "#000000"
  },
  "statusbarTextColor": {
    "allow": ["black", "white"],
    "default": "white"
  },
  "statusbarVisibility": {
    "allow": ["visible", "hidden"],
    "default": "visible"
  },
  "showPhoneFrameOnDesktop": {
    "type": "boolean",
    "default": true
  },
  "materialSubnavbarFix": {
    "type": "boolean",
    "default": true
  },
  "completeRoutesFile": {
    "type": "boolean",
    "default": true
  },
  "specialRoutes": {
    "type": "object",
    "default": {}
  },
  "pagesWithRequiredLogin": {
    "type": "array"
  },
  "firebase": {
    "props": {
      "apiKey": {
        "type": "string"
      },
      "authDomain": {
        "type": "string"
      },
      "databaseURL": {
        "type": "string"
      },
      "storageBucket": {
        "type": "string"
      },
      "allowEmailLogin": {
        "type": "boolean",
        "default": false
      },
      "allowEmailRegistration": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "devFirebase": {
    "props": {
      "deployDevRulesOnTesting": {
        "type": "boolean",
        "default": false
      },
      "apiKey": {
        "type": "string"
      },
      "authDomain": {
        "type": "string"
      },
      "databaseURL": {
        "type": "string"
      },
      "storageBucket": {
        "type": "string"
      },
      "allowEmailLogin": {
        "type": "boolean",
        "default": false
      },
      "allowEmailRegistration": {
        "type": "boolean",
        "default": false
      }
    }
  },
  "appStoreId": {
    "type": "string"
  },
  "playStoreId": {
    "type": "string"
  },
  "useCordovaPlugins": {
    "type": "array",
    "default": [
      "cordova-plugin-statusbar",
      "cordova-plugin-whitelist"
    ]
  },
  "resetLocalStorageOnVersionChange": {
    "type": "boolean",
    "default": false
  },
  "buildSourcemaps": {
    "type": "boolean",
    "default": false
  },
  "fixCodeOnTest": {
    "type": "boolean",
    "default": true
  },
  "fixCodeOnBuild": {
    "type": "boolean",
    "default": true
  },
  "devServerPort": {
    "regexp": "/^([0-9]{4})$/",
    "default": "8080"
  }
}
